<h1>Locações</h1>
<section>
  <% @rentals.each do |rental| %>
    <% if rental.in_progress? %>
      <p>Código: <%= link_to rental.code, begin_rental_path(rental) %></p>
    <% else %>
      <p>Código: <%= rental.code %></p>
    <% end %>
    <p>Data de início: <%= rental.start_date.strftime('%d/%m/%y') %></p>
    <p>Data de fim: <%= rental.end_date.strftime('%d/%m/%y') %></p>
    <p>Cliente: <%= rental.client.name %></p>
    <p>Categoria de carro: <%= rental.car_category.name %></p>
    <p>Status: <%= rental.status %></p>
    <% if rental.active? %>
      <p><%= link_to 'Cancelar', cancel_rental_path(rental) %></p>
    <% end %>
  <% end%>
</section>